{% if app.user %}
	{% for role in app.user.roles %}
		{% if role is same as ("ROLE_ADMIN") %}
			<div class="admin-bar">
				<a href="{{path('admin')}}" class="admin-bar-item">Dashboard</a>
				<a href="{{path('app_logout')}}" class="admin-bar-item">Déconnexion</a>
			</div>

		{% endif %}
	{% endfor %}
{% endif %}

<nav>
	<div class="items">
		<div class="item">
			<a href="{{path('home')}}">Accueil</a>
		</div>
		{% for c in categoryRepository.findAll() %}
			<div class="item">
				<a href="{{path('category_show', {name : c.name})}}">{{c.name}}</a>
			</div>
		{% endfor %}
		<div class="item">
			<a href="{{path('calendar_show')}}">Calendrier</a>
		</div>
		<div class="item">
			<a href="{{path('archive_index')}}">Archives</a>
		</div>
		<div class="item">
			<a href="{{path('app_logout')}}">Déconnexion</a>
		</div>
		<div class="item">
			<a href="{{path('user_profile')}}">Profil</a>
		</div>

		<div class="dropdown">
			<button class="dropbtn">
				<i class="fas fa-bars"></i>
				| Menu
			</button>
			<div class="dropdown-content">
				<a href="{{path('home')}}">Accueil</a>

				{% for c in categoryRepository.findAll() %}
					<a href="{{path('category_show', {name : c.name})}}">{{c.name}}</a>
				{% endfor %}


				<a href="{{path('calendar_show')}}">Calendrier</a>

				<a href="{{path('archive_index')}}">Archives</a>

				<a href="{{path('user_profile')}}">Profil</a>

				<a href="{{path('app_logout')}}">Déconnexion</a>


			</div>
		</div>


	</div>


</nav>
