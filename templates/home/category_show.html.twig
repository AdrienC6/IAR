{% extends "base.html.twig" %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}
	<div class="title">
		<h1>{{category.name}}</h1>
	</div>

	{% for article in articles %}
		<div class="article-card">
			<p class="article-date">
				{{article.createdAt|date('d/m/Y')}}</p>
			<p>Cat√©gorie(s) :
				{% for category in article %}
					<a href="{{path('category_show', {name: category.name})}}" class="article-category">|
						{{category.name}}
					</a>
				{% endfor %}
			</p>
			{% if article.tag|length > 0 %}
				<p class="article-tag">Etiquette(s) :
					{% for tag in article.tag %}
						<a href="#" class="article-category">|
							{{tag.name}}
						</a>
					{% endfor %}
				</p>

			{% endif %}

			<h2>{{article.title}}</h2>
			<p>{{article.text}}</p>

		</div>
	{% endfor %}
{% endblock %}
